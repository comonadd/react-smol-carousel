{
  "name": "react-smol-carousel",
  "version": "1.0.1",
  "description": "Lightweight and customizable React.js carousel",
  "main": "./build/slider.cjs.js",
  "browser": "./build/slider.min.js",
  "module": "./build/slider.esm.js",
  "types": "./build/slider.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-examples": "node_modules/.bin/esbuild --define:process.env.NODE_ENV=\"'development'\" --bundle examples/all.tsx --outfile=examples/bundle.js --sourcemap --minify",
    "build-esm": "esbuild --define:process.env.NODE_ENV=\"'production'\" --bundle slider.tsx --outfile=build/slider.esm.js --minify --external:react --external:react-dom --external:classnames --format=esm",
    "build-cjs": "esbuild --define:process.env.NODE_ENV=\"'production'\" --bundle slider.tsx --outfile=build/slider.cjs.js --minify --external:react --external:react-dom --external:classnames --format=cjs",
    "build-iife": "esbuild --define:process.env.NODE_ENV=\"'production'\" --bundle slider.tsx --outfile=build/slider.min.js --minify --external:react --external:react-dom --external:classnames --format=iife",
    "typegen": "tsc -d -p . --outDir build --emitDeclarationOnly",
    "build": "npm run-script build-esm && npm run-script build-cjs && npm run-script build-iife && npm run-script typegen",
    "dev": "node_modules/.bin/esbuild --watch --define:process.env.NODE_ENV=\"'development'\" --bundle examples/all.tsx --outfile=examples/bundle.js --sourcemap",
    "typecheck": "tsc --watch --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitryguzeev/react-slide.git"
  },
  "keywords": [
    "react",
    "carousel",
    "slider"
  ],
  "author": "Dmitry Guzeev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dmitryguzeev/react-slide/issues"
  },
  "homepage": "https://github.com/dmitryguzeev/react-slide#readme",
  "devDependencies": {
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "esbuild": "^0.9.6",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
